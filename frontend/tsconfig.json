{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "outDir": "./dist",                // Make sure compiled files go into 'dist'
    "composite": true,                  // Required for `tsc -b`
    "declaration": true,                 // Generates declaration files (.d.ts)
    "declarationMap": true,
    "noEmitOnError": false,              // Ensures .d.ts files are still generated
    "skipLibCheck": true,                // Ignore checking node_modules
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "cypress"]
}
